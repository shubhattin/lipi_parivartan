{
  "compilerOptions": {
    "target": "ESNext",
    "paths": {
      "@/*": ["./src/*"]
    },
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "allowJs": true,
    "checkJs": false
  },
  "include": ["./src/**/*", "./tests/**/*"]
}
